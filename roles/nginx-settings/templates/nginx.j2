user {{ nginx_web_owner }};
worker_processes auto;
error_log {{ nginx_log_folder_remote }}/error.log;
pid /run/nginx.pid;

# Load dynamic modules. See /usr/share/doc/nginx/README.dynamic.
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 1024;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 2048;

    include             {{ nginx_config_remote }}/mime.types;
    default_type        application/octet-stream;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include {{ virtual_hosts_folder_remote }}/*.conf;

    server {
      server_name dkochetov.devops.rebrain.srwx.net www.dkochetov.devops.rebrain.srwx.net;
      listen localhost:8080;
      listen localhost:8181;
      # security
      add_header X-Frame-Options SAMEORIGIN;
      add_header X-Content-Type-Options nosniff;
      add_header X-XSS-Protection "1; mode=block";
      # security
      disable_symlinks if_not_owner from=$root_path;
      set $root_path /var/www/html/dkocheto.devops.rebrain.srwx.net/web;
      # cache for photos
      location ~* ^.+\.(jpg|jpeg|gif|png|svg|js|css|mp3|ogg|mpe?g|avi|zip|gz|bz2?|rar|swf)$ {
        root $root_path;
        access_log /var/www/html/dkocheto.devops.rebrain.srwx.net/logs/dkocheto.devops.rebrain.srwx.net.access.log main;
        error_log /var/www/html/dkochetov.devops.rebrain.srwx.net/logs/dkocheto.devops.rebrain.srwx.net.error.log ;
        error_page 404 = @fallback;
        expires max;
      }
      # Настроить nginx, используя location's, таким образом, чтобы запросы по маске {доменное_имя}/go проксировались на порт, который слушает веб-сервер,
      # написанный на языке Go
      location  /go {
            proxy_pass http://localhost:8080;

            access_log /var/www/html/dkochetov.devops.rebrain.srwx.net/logs/dkocheto.devops.rebrain.srwx.net.access.root.log main;
            error_log /var/www/html/dkochetov.devops.rebrain.srwx.net/logs/dkocheto.devops.rebrain.srwx.net.error.root.log ;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                        proxy_set_header X-Forwarded-Proto $scheme;
                        proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Scheme $scheme;

          }
        # Настроить nginx, используя location's, таким образом, чтобы запросы по маске {доменное_имя}/php (или /python) проксировались на интерпретатор,
        # выполняющий код приложения на языке PHP или Python.
      location ~ ^/(php/python)/ {
        proxy_pass http://dkochetov.devops.rebrain.srwx.net:8181;
        #proxy_redirect http://dkochetov.devops.rebrain.srwx.net:8181 /;
        access_log /var/www/html/dkocheto.devops.rebrain.srwx.net/logs/dkocheto.devops.rebrain.srwx.net.access.root.log main;
        error_log /var/www/html/dkocheto.devops.rebrain.srwx.net/logs/dkocheto.devops.rebrain.srwx.net.error.root.log ;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                    proxy_set_header X-Forwarded-Proto $scheme;
                    proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;

      }
    }
}
